<Page x:Class="ZooClinic.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZooClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainMenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >
            <TextBlock FontSize="50"
                       FontWeight="ExtraBold">Главное меню</TextBlock>
            <Button Margin="20" Name="addAnimal" Click="addAnimal_Click" >Добавление животных</Button>
            <Button Margin="20" Name="addOwner" Click="addOwner_Click">Добавление хозяина</Button>
            <Button Margin="20" Name="addVeterinar" Click="addVeterinar_Click">Добавление врача</Button>
            <Button Margin="20" Name="addAppointment" Click="addAppointment_Click">Добавление записи</Button>
            <Button Margin="20" Name="statistic" Click="statistic_Click">Статистика</Button>




        </StackPanel>
    </Grid>
</Page>
